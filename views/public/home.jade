form.form-horizontal(ng-submit='runDemo()', name='animationPropertiesForm')
	.form-group
		label.col-lg-2.control-label(for='partsNumber') Parts number
		.col-lg-2
			input#partsNumber.form-control(type='number', min='0', placeholder='integer', ng-model='options.partsNumber')
	.form-group
		label.col-lg-2.control-label(for='width') Canvas params
		.col-lg-2
			input#width.form-control(type='number', min='0', placeholder='width(px)', ng-model='options.canvas.width')
		.col-lg-2
			input#height.form-control(type='number', min='0', placeholder='height(px)', ng-model='options.canvas.height')
	.form-group
		label.col-lg-2.control-label(for='width') Speed
		.col-lg-2
			input#speed.form-control(type='number', min='0', step='0.05', placeholder='px/ms', ng-model='options.speed')
	.form-group
		label.col-lg-2.control-label(for='width') Parts delay
		.col-lg-2
			input#delay.form-control(type='number', placeholder='ms', ng-model='options.delay')
	hr
	.form-group
		.radio
			label
				input(type='radio', name='animationType', value='css', ng-model='options.animationType')
				| HTML + CSS transitions
		.radio
			label
				input(type='radio', name='animationType', value='svg', ng-model='options.animationType')
				| SVG(Raphael.js)
	hr
	.form-group
		.radio
			label
				input(type='radio', name='styleType', value='basic', ng-model='options.styleType')
				| Basic
		.radio(ng-show='options.isCssAnimation')
			label
				input(type='radio', name='styleType', value='shark', ng-model='options.styleType')
				| Shark

	hr
	button.btn.btn-primary.btn-large.btn-block(type='submit') Try
